<%= render("layouts/errors", :object => @question) %>

<%= form_for @question, :html => { :multipart => true } do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area(:content, size: "100x20") %>
  </div>

  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
